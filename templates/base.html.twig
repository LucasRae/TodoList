        {% else %}
            <a href="{{ path('app_login') }}" class="login-link">Iniciar sesi칩n</a>
        {% endif %}
    </div>
</header>


    <div class="layout-wrapper">
        <ul class="sidebar" id="sidebar">
            <div class="brand" id="sierra">
               
                <span class="text">Men칰</span>
            </div>

            <div class="item">
                <a class="link" href="{{ path('app_inicio') }}">
                    游<span class="text">Inicio</span>
                </a>
            </div>
            <div class="item">
